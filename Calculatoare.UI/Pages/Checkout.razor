@page "/checkout"
@layout EmptyLayout

@using Calculatoare.Shared.Authentication.DTOs
@inject AuthenticationStateProvider AuthStateProvider
@inject ILocalStorageService LocalStorage
@inject HttpClient Http
@inject NavigationManager _nav

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="with=device-width, initial-scale=1.0">
    <title>Lulutech</title>
    <link rel="stylesheet" href="style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <div class="background">
        <section class="header">
            <nav>
                <a href="/"><img src="image/logo.png"></a>
                <div class="nav-links" id="navLinks">
                    <i class="fa fa-times-circle" onclick="hideMenu()"></i>
                    <div class="login">
                        <a href="/login" class="login-item" style="margin-left: auto;"><i class="fa fa-user-o"></i></a>
                        <div class="login-item">
                            <i class="fa fa-shopping-cart"></i>
                        </div>
                    </div>
                    <ul>
                        <li><a href="/">ACASA</a></li>
                        <li><a href="/desprenoi">DESPRE NOI</a></li>
                        <li><a href="/servicii">SERVICII</a></li>
                        <li><a href="/keycaps">KEYCAPS</a></li>
                        <li><a href="#recenzii">RECENZII</a></li>
                        <li><a href="/contact">CONTACT</a></li>
                    </ul>
                </div>
                <i class="fa fa-bars" onclick="showMenu()"></i>

            </nav>
            <div class="containere">
                <form action="">
                    <div class="coloana">
                        <div class="cole">
                            <h3 class="title">Detalii Client</h3>

                            <div class="inputBox">
                                <span>Nume Prenume :</span>
                                <input type="text" placeholder="Andrei Alexandru">
                            </div>
                            <div class="inputBox">
                                <span>Email :</span>
                                <input type="email" placeholder="example@example.com">
                            </div>
                            <div class="inputBox">
                                <span>Adresa :</span>
                                <input type="text" placeholder="strada localitatea blocul">
                            </div>
                            <div class="inputBox">
                                <span>Orasul :</span>
                                <input type="text" placeholder="Bucuresti">
                            </div>
                            <div class="inputBox">
                                <span>Cod Postal :</span>
                                <input type="text" placeholder="Bucuresti">
                            </div>

                        </div>
                        <div class="cole">
                            <h3 class="payment">Plata</h3>

                            <div class="inputBox">
                                <span>Carduri acceptate :</span>
                                <img src="image/carduri.jpg" alt="">
                            </div>
                            <div class="inputBox">
                                <span>Nume Destinatar Card :</span>
                                <input type="text" placeholder="Andrei Alexandru">
                            </div>
                            <div class="inputBox">
                                <span>Numarul de pe card :</span>
                                <input type="number" placeholder="1111-2222-3333-4444">
                            </div>
                            <div class="inputBox">
                                <span>Luna Expirari :</span>
                                <input type="text" placeholder="August">
                            </div>
                            <div class="inputBox">
                                <span>Anul Expirari :</span>
                                <input type="number" placeholder="2024">
                            </div>
                            <div class="inputBox">
                                <span>CVV :</span>
                                <input type="number" placeholder="1234">
                            </div>

                        </div>
                    </div>
                    <input type="submit" value="proceed to checkout" class="submit-btn">
                </form>
            </div>
        </section>

        <!-------JavaScript pentru deschidere meniuri pe telefon------->

        <script>

            var navLinks = document.getElementById("navLinks")

            function showMenu() {
                navLinks.style.right = "0";
            }
            function hideMenu() {
                navLinks.style.right = "-200px";
            }

        </script>
    </div>
</body>
</html>